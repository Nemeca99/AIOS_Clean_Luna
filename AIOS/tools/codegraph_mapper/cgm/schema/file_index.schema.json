{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "File inventory index",
  "patternProperties": {
    "^.*$": {
      "type": "object",
      "required": ["path", "size", "mtime", "sha256"],
      "properties": {
        "path": {"type": "string"},
        "size": {"type": "integer"},
        "mtime": {"type": "string"},
        "sha256": {"type": "string"},
        "mime": {"type": "string"},
        "encoding": {"type": "string"}
      }
    }
  }
}

